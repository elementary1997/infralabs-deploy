# Caddy конфигурация для автоматического HTTPS
# Домен: localhost
# Режим SSL: Самоподписанный сертификат
# Caddy автоматически сделает редирект HTTP -> HTTPS

localhost {
    # Проксирование на nginx
    reverse_proxy nginx:80 {
        # Передача оригинальных заголовков
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-Proto {scheme}
    }

    # Логирование
    log {
        output stdout
        format console
    }

    # Security headers
    header {
        # HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # XSS Protection
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        # Referrer Policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Используется самоподписанный сертификат для localhost
    tls internal
}
