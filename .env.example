# Django настройки
SECRET_KEY=your-secret-key-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# База данных (используется из docker-compose, но можно переопределить)
DATABASE_URL=postgresql://infralabs_user:infralabs_pass_change_in_prod@db:5432/infralabs

# Redis
REDIS_URL=redis://redis:6379/0

# CORS настройки (если нужно)
CORS_ALLOWED_ORIGINS=https://your-domain.com,http://localhost:3000

# Email настройки (опционально)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Media files
MEDIA_ROOT=/app/media
MEDIA_URL=/media/
STATIC_ROOT=/app/staticfiles
STATIC_URL=/static/
