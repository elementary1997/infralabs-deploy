# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-change-this-in-production
DJANGO_DEBUG=False

# Allowed Hosts - список хостов через запятую
# Примеры:
#   Для локального использования: localhost,127.0.0.1
#   Для production: yourdomain.com,www.yourdomain.com
#   Для нескольких серверов: server1.example.com,server2.example.com,192.168.1.100
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Settings - список разрешенных источников через запятую
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# CSRF Trusted Origins - список доверенных источников для CSRF через запятую
# Для HTTPS: https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://infralabs_user:${POSTGRES_PASSWORD:-infralabs_pass_change_in_prod}@db:5432/infralabs

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Admin User Configuration (for automatic creation on first start)
ADMIN_EMAIL=admin@infralabs.com
ADMIN_PASSWORD=admin123
ADMIN_USERNAME=admin

# Sandbox Configuration
SANDBOX_TIMEOUT=300
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_CPU_LIMIT=1.0
MAX_CONCURRENT_SANDBOXES=50

# N8N Integration (optional)
N8N_WEBHOOK_URL=

# PostgreSQL Password (can also be set via environment variable)
POSTGRES_PASSWORD=infralabs_pass_change_in_prod
